<?php

/**
 * @file
 * Contains iol.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function iol_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the iol module.
    case 'help.page.iol':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('IllustratiOnLine Project Module') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function iol_theme() {
  $theme = [];
  $theme['project'] = [
    'render element' => 'elements',
    'file' => 'project.page.inc',
    'template' => 'project',
  ];
  $theme['project_content_add_list'] = [
    'render element' => 'content',
    'variables' => ['content' => NULL],
    'file' => 'project.page.inc',
  ];
  $theme['scene'] = [
    'render element' => 'elements',
    'file' => 'scene.page.inc',
    'template' => 'scene',
  ];
  $theme['scene_content_add_list'] = [
    'render element' => 'content',
    'variables' => ['content' => NULL],
    'file' => 'scene.page.inc',
  ];
  $theme['object'] = [
    'render element' => 'elements',
    'file' => 'object.page.inc',
    'template' => 'object',
  ];
  $theme['object_content_add_list'] = [
    'render element' => 'content',
    'variables' => ['content' => NULL],
    'file' => 'object.page.inc',
  ];

  return $theme;
}

/**
* Implements hook_theme_suggestions_HOOK().
*/
function iol_theme_suggestions_project(array $variables) {
  $suggestions = [];
  $entity = $variables['elements']['#project'];
  $sanitized_view_mode = strtr($variables['elements']['#view_mode'], '.', '_');

  $suggestions[] = 'project__' . $sanitized_view_mode;
  $suggestions[] = 'project__' . $entity->bundle();
  $suggestions[] = 'project__' . $entity->bundle() . '__' . $sanitized_view_mode;
  $suggestions[] = 'project__' . $entity->id();
  $suggestions[] = 'project__' . $entity->id() . '__' . $sanitized_view_mode;
  return $suggestions;
}

